    div.header_decor_text_1
        h1 
            span CREATIVITY
            span /
            span IDEAS
            span /
            span INNOVATION

    div.content
        article.consultation
            h2 
                span FIND OUT 
                span COST 
                span AND GET 
                span CONSULTATION
            p Leave your request and a message. We will contact you and answer all your questions related to branding and our services.
            form.form
                a(name="form")
                label Name 
                    br 
                    input(type="text" name="fio" id="fio") 
                label Phone number 
                    br
                    input(type="tel" name="phone" id="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}") 
                label Email 
                    br
                    input(type="email" name="email" id="email") 
                label Promocode 
                    br
                    input(type="text" name="promocode" id="promocode") 
                label Choose services 
                    div.checkbox
                        input(type="checkbox" name="market_analysis" id="market_analysis") 
                        label(for="market_analysis")   Market analysis and CA
                    div
                        input(type="checkbox" name="loyalty_program" id="loyalty_program") 
                        label(for="loyalty_program")   Development of loyalty programs
                    div
                        input(type="checkbox" name="site_promo" id="site_promo") 
                        label(for="site_promo")   SEO, site promotion
                    div
                        input(type="checkbox" name="brandbook" id="brandbook") 
                        label(for="brandbook")   Development of a logo, brand book
                    div
                        input(type="checkbox" name="pr_company" id="pr_company") 
                        label(for="pr_company")   Building and realise PR campaign
                    div
                        input(type="checkbox" name="chat_bot" id="chat_bot") 
                        label(for="chat_bot")   Chat bots
                label Additional information 
                    br
                    input(type="textarea" name="info" id="info") 
            button(type="button" id="calc_cost") GO
                     

    div.header_decor_text_3
